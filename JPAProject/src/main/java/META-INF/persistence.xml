<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
                        xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
                         http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="JPAProject">
		<class>com.springbook.biz.board.Board</class>
		<class>com.springbook.biz.board.User</class>
		<properties>
			<!-- 필수 속성  -->
			<property name="javax.peristence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
			<property name="javax.persistence.jdbc.user" value="quick"/>
			<property name="javax.persistence.jdbc.password" value="quick"/>
		    <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle8iDialect"/>
		    
		    <!-- 옵션 -->
		    <property name="hibernate.show_sql" value="true"/>
		    <property name="hibernate.format_sql" value="true"/>
		    <property name="hibernate.use_sql_comments" value="false"/>
		    <property name="hibernate.id.new_generator_mappings" value="true"/>
		    <property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
</persistence>
